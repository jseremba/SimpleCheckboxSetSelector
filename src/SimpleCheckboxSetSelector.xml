<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.simplecheckboxsetselector.SimpleCheckboxSetSelector" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
	<name>Checkbox Set Selector</name>
	<description></description>
	<icon></icon>
	<properties>
		<property key="associationReference" isPath="yes" type="entity" required="true" pathType="referenceSet" allowNonPersistableEntities="true">
            <caption>Association</caption>
            <category>Data source</category>
            <description>Select the reference where the selected item will be saved</description>
		</property>
        <property key="labelAttribute" type="attribute" entityProperty="associationReference">
            <caption>Label attribute</caption>
            <category>Data source</category>
            <description>The attribute content will be used for the label of the checkbox</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
		<property key="dataSourceType" type="enumeration" defaultValue="xpath">
			<caption>Data source type</caption>
			<category>Data source</category>
			<description>The method for retrieving the objects</description>
			<enumerationValues>
				<enumerationValue key="xpath">XPath</enumerationValue>
				<enumerationValue key="microflow">Microflow</enumerationValue>
			</enumerationValues>
		</property>
        <property key="constraint" type="entityConstraint" required="false" entityProperty="associationReference">
            <caption>XPath constraint</caption>
            <category>Data source</category>
			<description>Constrain the available checkbox items</description>
		</property>
        <property key="sortAttribute" type="attribute" entityProperty="associationReference" required="false">
            <caption>Sort attribute</caption>
            <category>Data source</category>
            <description>This field provides the sort attribute for the XPath only</description>
			<attributeTypes>
				<attributeType name="AutoNumber" />
				<attributeType name="Boolean" />
				<attributeType name="Currency" />
				<attributeType name="DateTime" />
				<attributeType name="Enum" />
				<attributeType name="Float" />
				<attributeType name="Integer" />
				<attributeType name="Long" />
				<attributeType name="String" />
			</attributeTypes>
		</property>
		<property key="sortOrder" type="enumeration" defaultValue="asc">
			<caption>Sort order</caption>
			<category>Data source</category>
			<description>The sort order only applies to XPath constraint</description>
			<enumerationValues>
				<enumerationValue key="asc">Ascending</enumerationValue>
				<enumerationValue key="desc">Descending</enumerationValue>
			</enumerationValues>
		</property>
		<property key="dataSourceMicroflow" type="microflow" required="false">
			<caption>Data source microflow</caption>
			<category>Data source</category>
			<description></description>
			<returnType type="Void" />
		</property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>Behavior</category>
            <description>If true, the widget is not editable</description>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
		<property key="alignment" type="enumeration" defaultValue="vertical">
			<caption>Alignment</caption>
			<category>Display</category>
			<description>Alignment of the label and the checkbox items</description>
			<enumerationValues>
				<enumerationValue key="horizontal">Horizontal</enumerationValue>
				<enumerationValue key="vertical">Vertical</enumerationValue>
			</enumerationValues>
		</property>
		<property key="showLabel" type="boolean" defaultValue="true">
			<caption>Show Label</caption>
			<category>Display</category>
			<description>Show a label for the field</description>
		</property>
		<property key="labelCaption" type="translatableString" required="false" multiline="false">
			<caption>Label Caption</caption>
			<category>Display</category>
			<description>Specify the caption to use for the field</description>
            <translations>
                <translation lang="en_US">Label</translation>
                <translation lang="nl_NL">Label</translation>
            </translations>
		</property>
		<property key="formOrientation" type="enumeration" defaultValue="horizontal">
			<caption>Form orientation</caption>
			<category>Display</category>
			<description>The orientation of the label and checkbox items</description>
			<enumerationValues>
				<enumerationValue key="horizontal">Horizontal</enumerationValue>
				<enumerationValue key="vertical">Vertical</enumerationValue>
			</enumerationValues>
		</property>
		<property key="labelWidth" type="integer" defaultValue="4">
			<caption>Label Width (weight)</caption>
			<category>Display</category>
			<description>The column size of the label control (only applied with horizontal orientation)</description>
		</property>
		<property key="showMore" type="integer" defaultValue="0">
			<caption>Show More count</caption>
			<category>Display</category>
			<description>If this is larger than zero, only that amount of items will be shown first. All others will behind a Show More button</description>
		</property>
        <property key="onChangeEvent" type="enumeration" defaultValue="doNothing">
            <caption>On change</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
		<property key="onChangeMicroflow" type="microflow" required="false">
			<caption>On change microflow</caption>
			<category>Events</category>
			<description>The microflow that will be executed onchange when a checkbox item is checked or unchecked</description>
			<returnType type="Void"/>
		</property>
        <property key="onChangeNanoflow" type="nanoflow" required="false">
			<caption>On change nanoflow</caption>
			<category>Events</category>
			<description>The nanoflow that will be executed onchange when a checkbox item is checked or unchecked</description>
			<returnType type="Void"/>
		</property>
		<property key="onChangeDelay" type="integer" defaultValue="0">
			<caption>On change delay</caption>
			<category>Events</category>
			<description>A delay (in ms) for the onchange microflow to be triggered. This can be used to provide smoother UX</description>
		</property>
	</properties>
</widget>
